<h1>New User Sign Up</h1>

<%= form_tag users_path do %>
  <label>Name:</label><br>
  <%= text_field_tag :'user[name]' %><br>

  <%= render 'user'%>

  <label>Check box if you are an owner</label>
  <%= check_box_tag :'user[owner]' %><br>

  <label>Password</label><br>
  <%= password_field_tag :'user[password]' %><br><br>

  <%= submit_tag "Create User" %>
<% end %>
