
<% if @message %>
<p><%= @message %></p>
<% end %>

<p>Name: <%= @user.name %></p>
<% if @user.image %>
    <img src="<%= @user.image %>">
<% end %>
<% if @user.owner == true %>
  <p>OWNER</p>
<% else %>
  <%= render partial: 'form', locals: {user: @user} %>
  <%= link_to "Edit Profile", edit_user_path(@user) %>&nbsp&nbsp&nbsp&nbsp
<% end %>
<%= link_to "See All Houses", "/houses" %>
